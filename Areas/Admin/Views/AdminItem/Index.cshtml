@model IEnumerable<TaskOrder.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Itens</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.ImagemPequenaUrl)
            </th>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destaque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCurta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <img class="w-100 h-100" src="@item.ImagemPequenaUrl" alt="">
            </td>
            <td>
                <img src="@item.ImagemUrl" alt="">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destaque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
            </td>
            <td>
                <a class="text-decoration-none text-secondary" asp-action="Edit" asp-route-id="@item.ItemId">Editar</a>
                <a class="text-decoration-none text-secondary" asp-action="Details" asp-route-id="@item.ItemId">Detalhes</a>
                <a class="text-decoration-none text-secondary" asp-action="Delete" asp-route-id="@item.ItemId">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
