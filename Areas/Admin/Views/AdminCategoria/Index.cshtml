@model IEnumerable<TaskOrder.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Criar Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a class="text-decoration-none text-secondary" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                <a class="text-decoration-none text-secondary" asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                <a class="text-decoration-none text-secondary" asp-action="Delete" asp-route-id="@item.CategoriaId">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
