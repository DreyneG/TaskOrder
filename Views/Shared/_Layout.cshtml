<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskOrder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskOrder.styles.css" asp-append-version="true" />
    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Icons -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex justify-content-around">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                        src="~/imagens/logo.png" height="42px" width="60px" alt="DeliveryFree!"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item me-4 mt-2 ms-2">
                            @await Component.InvokeAsync("CategoriaMenu")
                        </li>

                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                            }
                        </li>

                        <li class="nav-item">
                            <form class="navbar-form navbar-right ms-4 ps-4 mt-1 me-4 pe-4 40em"
                                asp-controller="Item" asp-action="Search" method="get">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Procurar produto"
                                        name="searchString" value="@ViewData["searchString"]">
                                </div>
                            </form>
                        </li>

                        <li>
                            @await Component.InvokeAsync("CarrinhoResumo")
                        </li>
                        <li>
                            @await Html.PartialAsync("_Login")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid pb-2 mb-sm-4" style="background-color: #D14224; color: #ffffff;">


        <!-- Barrinha que O Lucas inventou pra dar Trabalho.txt -->
        <div class="justify-content-between mobile icones shadow-lg bg-white fixed-bottom">
            <div class="pt-1 pb-1 ps-4"><a class="text-black " href=""><i class="bi bi-basket2-fill"></a></i></div>
            <div class="pt-1 pb-1"><a class="text-black " href=""><i class="bi bi-person-circle"></a></i></div>
            <div class="pt-1 pb-1 pe-4"><a class="text-black " href=""><i class="bi bi-journal-text"></a></i></div>
        </div>

        <!-- Actual Footer -->
        <footer class="pt-4 b-0">
            <div class="row">
                <div class="col-6 d-flex flex-column align-items-center">
                    <!-- Quem Somos -->
                    <h5>Quem somos</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Franquias</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Trabalhe Conosco</a>
                        </li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Publicidade</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Responsável</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Privacidade</a></li>
                    </ul>
                </div>

                <!-- Para Você -->
                <div class="col-6 d-flex flex-column align-items-center">
                    <h5>Para você</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Lançamentos</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">App</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Delivery</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Peça e retire</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white">Whatsapp</a></li>
                    </ul>
                </div>
            </div>

            <!-- Redes Sociais -->
            <div class="col-12 mt-2 mb-3">
                <h5 class="d-flex justify-content-center">Redes Sociais</h5>
                <ul class="list-unstyled d-flex justify-content-center">
                    <li class="ms-2">
                        <h1><i class="bi bi-whatsapp"></i></h1>
                    </li>
                    <li class="ms-2">
                        <h1><i class="bi bi-twitter-x"></i></h1></i>
                    </li>
                    <li class="ms-2">
                        <h1><i class="bi bi-facebook"></i></h1>
                    </li>
                    <li class="ms-2">
                        <h1><i class="bi bi-instagram"></i></h1>
                    </li>
                </ul>
            </div>
            <div class="d-flex justify-content-center border-top mt-1">
                <p>© 2021 Company, Inc. All rights reserved.</p>
            </div>
        </footer>
    </div>
    <div class="mt-4 pt-4 mobile"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
